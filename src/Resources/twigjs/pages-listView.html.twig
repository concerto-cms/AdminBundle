{% extends 'layout-page.html' %}
{% block title %}Pages <small>Overview</small>{% endblock %}
{% block buttons %}
    <button type="button" class="btn btn-info btn-sm add-page">Add a page</button>
{% endblock %}
{% block body %}
<div class="container">
    <ul class="nav nav-pills">
        {% for language in languages %}
            <li role="presentation" class="{{ language.name == lang ? 'active' : '' }}">
                <a href="#/list/{{ language.name }}">{{ language.description }}</a>
            </li>
        {% endfor %}
    </ul>
    <br />
    <div class="list-group">
        {% for page in pages %}
            {% if page.get('type') in types %}
            <a href="#edit/{{ page.id }}" class="list-group-item">
                <h4 class="list-group-item-heading">{{ page.get('title') }}</h4>
                <p class="list-group-item-text">{{ page.id }}</p>
            </a>
            {% endif %}
        {% endfor %}
    </div>
</div>
{% endblock %}