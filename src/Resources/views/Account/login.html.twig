{% extends '::base.html.twig' %}
{% block stylesheets %}
    {% stylesheets 'bundles/concertocmsadmin/css/login.css' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block body %}
    <div id="login-container">
        <h1 class="text-center"><span class="sr-only">Concerto CMS</span><img src="{{ asset('bundles/concertocmsadmin/images/login-logo.png') }}" alt="Concerto CMS" /></h1>
        {% if error %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}
        <form action="{{ path('login_check') }}" method="post">
            <div class="form-group">
                <label for="username" class="sr-only">Username:</label>
                <input type="text" class="form-control" placeholder="Username" id="username" name="username" value="{% if last_username is defined %}{{ last_username }}{% endif %}" />
            </div>
            <div class="form-group">
                <label for="password" class="sr-only">Password:</label>
                <input class="form-control" type="password" placeholder="Password" id="password" name="password" />
            </div>
            <div class="checkbox">
                <label>
                    <input id="login-remember" type="checkbox" name="remember_me" value="1"> Remember me
                </label>
            </div>

            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}

            <hr />
            <div class="text-center">
                <button type="submit" class="btn btn-lg btn-block btn-success">Login</button>
            </div>
        </form>
    </div>
    <div id="login-bg"></div>

{% endblock %}
{% block javascript %}
    {% javascripts
    '@ConcertoCmsAdminBundle/Resources/js/Login/*.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script>
        controller = new Login.Controller();
    </script>

{% endblock %}